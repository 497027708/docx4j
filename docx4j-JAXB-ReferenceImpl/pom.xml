<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

  <parent>
	<groupId>org.docx4j</groupId>
	<artifactId>docx4j-parent</artifactId>
	<version>${revision}</version>
  </parent>
  
	<artifactId>docx4j-JAXB-ReferenceImpl</artifactId>
	<packaging>jar</packaging>
	<name>docx4j-JAXB-ReferenceImpl</name>

	<description>
		config specifying that docx4j should use the JAXB reference impls
	</description>

	<build>
		<plugins>

			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

	<dependencies>

		<dependency>
			<groupId>org.docx4j</groupId>
			<artifactId>docx4j-core</artifactId>
			<version>${revision}</version>
		</dependency>
	
<!-- 
https://github.com/eclipse-ee4j/jaxb-ri

Not in https://wiki.eclipse.org/Eclipse_GlassFish_5.1_Components_Release_Tracker

 -->

            <!-- Need 2.4.0 which has module-info making NamespacePrefixMapper visible -->
			<dependency>
			  <groupId>org.glassfish.jaxb</groupId>
			  <artifactId>jaxb-runtime</artifactId>
				<version>2.4.0-SNAPSHOT</version> <!--  built locally -->
			</dependency>
			<!-- need -api or javax.xml.bind.JAXBException  -->
			<!--  requires org.jvnet.staxex; https://github.com/eclipse-ee4j/jaxb-stax-ex 
				  and others, see https://github.com/eclipse-ee4j/jaxb-ri/blob/master/jaxb-ri/runtime/impl/src/main/java/module-info.java -->
			<dependency> 
			    <groupId>org.jvnet.staxex</groupId>
			    <artifactId>stax-ex</artifactId>
			    <version>1.9.0-SNAPSHOT</version>
				<exclusions>
					<exclusion>
						<groupId>jakarta.xml.bind</groupId>
						<artifactId>jakarta.xml.bind-api</artifactId>
					</exclusion>
				</exclusions>
    		</dependency>
			<dependency>
			  <groupId>org.glassfish.jaxb</groupId>
			  <artifactId>txw2</artifactId>
			  <!-- <version>2.4.0-b180830.0438</version> -->
				<version>2.4.0-SNAPSHOT</version> <!--  built locally -->
			</dependency>
			<!-- https://github.com/eclipse-ee4j/jaxb-istack-commons/issues  -->
			<dependency>
			    <groupId>com.sun.istack</groupId>
			    <artifactId>istack-commons-runtime</artifactId>
			    <version>3.1.0-SNAPSHOT</version>
			</dependency>  
			<dependency>
			    <groupId>com.sun.xml.fastinfoset</groupId>
			    <artifactId>FastInfoset</artifactId>
			    <version>1.3.0-SNAPSHOT</version>
			</dependency>

		
		</dependencies>

</project>